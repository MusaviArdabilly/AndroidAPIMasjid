<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#bac7a7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#e5e4cc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marquee"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#698474"/>

        <TextView
            android:id="@+id/marquee"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="Isi Marquee"
            android:textColor="#698474"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="290dp"
            android:padding="20dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/editMarquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marquee"
                android:textColorHint="#889e81"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btnKembali"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Kembali"/>

            <Button
                android:id="@+id/btnPerbaruhi"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Perbaruhi"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>