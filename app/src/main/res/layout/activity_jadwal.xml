<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#bac7a7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="650dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#e5e4cc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam Sholat"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#698474"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Subuh"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#698474"/>

                <TextView
                    android:id="@+id/subuh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="00.00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Dhuha"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#698474"/>

                <TextView
                    android:id="@+id/dhuha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="00.00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Duhur"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#698474"/>

                <TextView
                    android:id="@+id/duhur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="00.00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Ashar"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#698474"/>

                <TextView
                    android:id="@+id/ashar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="00.00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Maghrib"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#698474"/>

                <TextView
                    android:id="@+id/maghrib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="00.00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Isya"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#698474"/>

                <TextView
                    android:id="@+id/isya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="00.00" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/editsubuh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subuh"
                android:textColorHint="#889e81"/>

            <EditText
                android:id="@+id/editdhuha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dhuha"
                android:textColorHint="#889e81"/>

            <EditText
                android:id="@+id/editduhur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duhur"
                android:textColorHint="#889e81"/>

            <EditText
                android:id="@+id/editashar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ashar"
                android:textColorHint="#889e81"/>

            <EditText
                android:id="@+id/editmaghrib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Maghrib"
                android:textColorHint="#889e81"/>

            <EditText
                android:id="@+id/editisya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Isya"
                android:textColorHint="#889e81"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnKembali"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Kembali"/>

            <Button
                android:id="@+id/btnPerbaruhi"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Perbaruhi"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>